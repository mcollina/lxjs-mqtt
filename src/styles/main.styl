    background: rgba(0,0,0,0.3)
    h3
      color: white

.sensortag
  .bespoke-slide
    background-image: url('../images/sensortag.jpg')
    background-size: cover
    color: white !important

// prism styles

pre
  padding: 26px !important
  border-radius: 8px

